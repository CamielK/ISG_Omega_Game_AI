<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Polygon?>
<?import com.jfoenix.controls.JFXToggleButton?>
<BorderPane fx:id="root" styleClass="root" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Graphics.Controller">
    <stylesheets><URL value="@../css/styles.css" /></stylesheets>

    <center>
        <VBox fx:id="contentContainer" styleClass="content-container" BorderPane.alignment="CENTER" alignment="CENTER">
            <VBox fx:id="startContainer" styleClass="start-container" alignment="CENTER" spacing="20">
                <Label styleClass="start-header">Start a new game</Label>
                <Rectangle fx:id="startRect" width="150" height="3"/>
                <Polygon fx:id="startPoly"/>
                <HBox fx:id="playerSelect" styleClass="player-select-container" alignment="CENTER" spacing="20"/>
                <HBox alignment="CENTER" styleClass="input-group">
                    <Label>Board size:</Label>
                    <JFXSlider fx:id="sliderHexSize" styleClass="start-input" min="3" max="10" value="5" maxWidth="300"/>
                    <Label fx:id="labelHexSize">5</Label>
                </HBox>
                <JFXButton fx:id="btnStartGame" styleClass="btn-start" onAction="#StartGame">Start!</JFXButton>
            </VBox>
            <VBox fx:id="boardContainer" styleClass="board-container" visible="false" alignment="CENTER">
                <HBox fx:id="boardArea" alignment="CENTER"/>
                <HBox fx:id="currentPlayerArea" alignment="CENTER" spacing="40" minHeight="90"/>
            </VBox>
        </VBox>
    </center>

    <right>
        <BorderPane fx:id="playerContainer" visible="false" managed="false"
                    prefHeight="260.0" prefWidth="260.0" minWidth="260" maxWidth="260"
                    styleClass="player-container">
            <top>
                <VBox fx:id="playersBox" BorderPane.alignment="CENTER" alignment="TOP_CENTER" spacing="20">
                </VBox>
            </top>
            <center>
                <VBox BorderPane.alignment="CENTER" alignment="BOTTOM_LEFT">
                    <JFXToggleButton onAction="#ToggleGroup">Show group id</JFXToggleButton>
                    <JFXToggleButton onAction="#ToggleAxes">Show axes</JFXToggleButton>
                    <JFXButton fx:id="btnResetGame" styleClass="btn-reset" onAction="#ResetGame">Reset game</JFXButton>
                </VBox>
            </center>
        </BorderPane>
    </right>
</BorderPane>
